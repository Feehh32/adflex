{
  "name": "ad-flex",
  "version": "1.0.0",
  "description": "a desktop app to create service notes from your flexographic services",
  "main": "electronMain.js",
  "scripts": {
    "build": "electron-builder",
    "start": "electron electronMain.js",
    "webpackBuild": "webpack --mode production",
    "dev": "webpack --mode development --watch"
  },
  "keywords": [],
  "author": "Fernando Pereira",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/plugin-transform-runtime": "^7.24.3",
    "@babel/preset-env": "^7.24.3",
    "babel-loader": "^9.1.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "adflex",
    "productName": "AD-Flex",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "electronMain.js",
      "server/**/*",
      "node_modules/**/*",
      "database/**/*",
      "pages/**/*",
      "css/style.min.css",
      "main.js",
      "img/**/*",
      "js/plugin/simple-anime.js",
      ".env"
    ],
    "win": {
      "icon": "./img/logo-grande.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "asar": true
  },
  "prettier": {
    "printWidth": 100
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^5.1.5",
    "express": "^4.18.2",
    "mailgun.js": "^10.2.1",
    "sqlite3": "^5.1.6"
  }
}
